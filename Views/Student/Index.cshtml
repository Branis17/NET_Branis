@model IEnumerable<mvcTemplate.Models.Student>

    <h1>Liste des étudiants</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Firstname</td>
                <td>@student.Lastname</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-primary">Détails</a>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div>
        <a asp-action="Create" class="btn btn-success">Ajouter un étudiant</a>
    </div>
