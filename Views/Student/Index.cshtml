@model IEnumerable<mvcTemplate.Models.Student>

    <h2>Liste des Étudiants</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Âge</th>
                <th>GPA</th>
                <th>Major</th>
                <th>Date d'Admission</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Firstname</td>
                <td>@student.Lastname</td>
                <td>@student.Age</td>
                <td>@student.GPA</td>
                <td>@student.Major</td>
                <td>@student.AdmissionDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Ajouter un Étudiant</a>
